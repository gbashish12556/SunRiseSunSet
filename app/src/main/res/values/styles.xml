<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="edittext_places">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/edit_text_places_padding</item>
        <item name="android:layout_marginLeft">@dimen/normal_button_padding_top</item>
        <item name="android:layout_marginRight">@dimen/normal_button_padding_top</item>
        <item name="android:paddingTop">@dimen/edit_text_places_padding</item>
        <item name="android:paddingBottom">@dimen/edit_text_places_padding</item>
        <item name="android:paddingLeft">@dimen/edit_text_places_padding</item>
        <item name="android:paddingRight">@dimen/edit_text_places_padding</item>
        <item name="android:textSize">@dimen/places_text_size</item>
        <item name="android:background">@drawable/abc_edit_text_white_background</item>
    </style>

</resources>
